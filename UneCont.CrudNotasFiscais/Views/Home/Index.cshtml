@{
    ViewData["Title"] = "Home Page";
}

<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Notas Fiscais - Mini App</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
</head>
<body>
    <main class="container">
        <h1>Notas Fiscais</h1>


        <section class="form-section">
            <h2>Cadastrar Nota</h2>
            <form id="notaForm">
                <label> Número: <input type="text" id="numero" required></label>
                <label> Cliente: <input type="text" id="cliente" required></label>
                <label> Valor: <input type="number" step="0.01" id="valor" required></label>
                <label> Data de Emissão: <input type="date" id="dataEmissao" required></label>
                <button type="submit">Salvar</button>
            </form>
            <div id="formMessage" class="message"></div>
        </section>


        <section class="controls">
            <input type="text" id="filtroCliente" placeholder="Filtrar por cliente">
            <button id="ordenarValor">Ordenar por valor ↓</button>
        </section>


        <section class="list-section">
            <table id="tabelaNotas">
                <thead>
                    <tr>
                        <th>Número</th>
                        <th>Cliente</th>
                        <th>Valor</th>
                        <th>Data Emissão</th>
                        <th>Data Cadastro (UTC)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </section>
    </main>


    <script src="app.js"></script>
</body>
</html>